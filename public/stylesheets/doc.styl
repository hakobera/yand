/**
 * Override Node.js official document style
 */

body
  padding-top: 0

#content
  width: 760px
  overflow-y: scroll

#column1.interior
  padding-top: 0

.highlight
  color: #FFFFFF
  background-color: #8CC84B
  padding: 5px 0 5px 5px

/**
 * For top.html
 */
#top
  line-height: 10px

  header
    background-color: #8CC84B
    padding: 0 0 10px 10px

    h1
      margin: 0
      color: #FFFFFF
      font-size: 20px

  .content

    h2
      margin: 0 0 10px 0
      padding-bottom: 8px
      border-bottom: 1px solid #333

      span.name
        position: relative
        display: inline-block
        color: #000000
        font-size: 18px
        opacity: 1

      span.returns
        position: relative
        display: inline-block
        padding-left: 12px
        color: #666
        font-size: 12px
        opacity: 1

    .entry
      padding: 10px 20px 10px 20px

      a:hover
        text-decoration: underline

      div.longdesc
        font-size: 12px
        line-height: 18px

        p
          margin-bottom: 1em